@page "/products/add"
@page "/products/edit/{ProductId:int}"
 
<div class="row my-2">

    <h3 class="text-primary">@Title Product</h3>

    <div class="col-12">
        <EditForm Model="Product" OnValidSubmit="SaveData">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group mb-2 col-6">
                <label>Name</label>
                <InputText @bind-Value="Product.ProductName" class="form-control"></InputText>
            </div>
            <div class="form-group mb-2 col-6">
                <label>Price</label>
                <InputNumber @bind-Value="Product.ProductPrice" class="form-control"></InputNumber>
            </div>
            <div class="form-group mb-2">
                <button class="btn btn-primary">Save</button>
                <NavLink href="products" class="btn btn-secondary">Cancel</NavLink>
            </div>
        </EditForm>
    </div>
</div>


